{% extends "base-admin.html.twig" %}

{% block style %}
    <link href="{{asset("theme/plugins/bootstrap-select/css/bootstrap-select.css")}}" rel="stylesheet" />
    <link href="{{asset("theme/plugins/sweetalert/sweetalert.css")}}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="row clearfix">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <p>Editar franqueado</p>
                </div>
                <div class="body">
                    {% if franchisee %}
                        <form id="franchisee-edit">
                            <input type="hidden" name="id" value="{{franchisee.id}}" />
                            
                            <div class="form-group form-float row">
                                <div class="col-md-6">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="name" value="{{franchisee.name}}" maxlength="128" required>
                                        <label class="form-label">Nome de exibição</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="sponsor_name" value="{{franchisee.franchiseeData.name}}" maxlength="128" required>
                                        <label class="form-label">Nome do Responsável</label>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="birth" value="{{franchisee.franchiseeData.birth | date("d/m/Y")}}" required>
                                        <label class="form-label">Data de nascimento</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-line">
                                        <input type="email" class="form-control" name="email" value="{{franchisee.email}}" maxlength="128" required>
                                        <label class="form-label">Email</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-line">
                                        <input type="password" class="form-control" name="password">
                                        <label class="form-label">Senha</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="cpf" value="{{franchisee.franchiseeData.cpf}}">
                                        <label class="form-label">CPF</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="cnpj" value="{{franchisee.franchiseeData.cnpj}}">
                                        <label class="form-label">CNPJ</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="phone" value="{{franchisee.franchiseeData.phone}}">
                                        <label class="form-label">Telefone</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="celphone" value="{{franchisee.franchiseeData.celphone}}">
                                        <label class="form-label">Celular</label>
                                    </div>
                                </div>

                                <div class="col-md-12"></div>

                                <div class="col-md-6">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="cep" value="{{franchisee.franchiseeData.address.cep}}" required>
                                        <label class="form-label">CEP</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="street" maxlength="128" value="{{franchisee.franchiseeData.address.street}}" required>
                                        <label class="form-label">Rua</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="neighborhood" value="{{franchisee.franchiseeData.address.neighborhood}}" maxlength="64" required>
                                        <label class="form-label">Bairro</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="number" value="{{franchisee.franchiseeData.address.number}}" required>
                                        <label class="form-label">Número</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <p>Estado</p>
                                    <select name="state" class="form-control show-tick" required>
                                        {% for s in states %}
                                            <option value="{{s.uf}}" {% if s.id == franchisee.franchiseeData.address.city.state.id %}selected{% endif %}>{{s.name}}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="col-md-6">
                                    <p>Cidade</p>
                                    <select name="city" class="form-control show-tick" required>
                                        {% for c in city %}
                                            <option value="{{c.id}}" {% if c.id == franchisee.franchiseeData.address.city.id %}selected{% endif %}>{{c.name}}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="col-md-12"></div>

                            <div class="col-md-6">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="bank" value="{{franchisee.franchiseeData.bank}}" required>
                                    <label class="form-label">Banco</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="agency" value="{{franchisee.franchiseeData.agency}}" required>
                                    <label class="form-label">Agência</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="account" value="{{franchisee.franchiseeData.account}}" required>
                                    <label class="form-label">Conta</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="name_bank" value="{{franchisee.franchiseeData.nameBank}}" required>
                                    <label class="form-label">Favorecido</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="cpf_bank" value="{{franchisee.franchiseeData.cpfBank}}">
                                    <label class="form-label">CPF favorecido</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-line">
                                    <input type="text" class="form-control" name="cnpj_bank" value="{{franchisee.franchiseeData.cnpjBank}}">
                                    <label class="form-label">CNPJ favorecido</label>
                                </div>
                            </div>

                                <div class="col-md-12">
                                    <br />
                                    <button id="establishment-submit" class="btn bg-pink waves-effect">EDITAR</button>
                                </div>
                            </div>
                        </form>
                    {% else %}
                        <p>Franqueado não encontrado</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="{{asset("theme/plugins/bootstrap-select/js/bootstrap-select.js")}}"></script>
    <script src="{{asset("theme/plugins/jquery-inputmask/jquery.inputmask.bundle.js")}}"></script>
    <script src="{{asset("theme/plugins/sweetalert/sweetalert.min.js")}}"></script>
    <script src="{{asset("script.js")}}"></script>
    <script>
        $("input[name='birth']").inputmask('dd/mm/yyyy', { placeholder: '__/__/____' });
        $("input[name='cpf'], input[name='cpf_bank']").inputmask("999.999.999-99");
        $("input[name='cnpj'], input[name='cnpj_bank']").inputmask("99.999.999/9999-99");
        $("input[name='phone']").inputmask("(99) 9999-9999");
        $("input[name='celphone']").inputmask("(99) 99999-9999");

        $("input[name='cep']").blur(function(){
            if($(this).val() != ""){
                getLocation($(this).val(), changeAdressForm);
            }
        });

        $("select[name='state']").change(function(){
            changeCities($(this), $("select[name='city']"), $("#establishment-submit"));
        });

        $("#franchisee-edit").submit(function(e){
            e.preventDefault();

            /*if(!validCPF($("input[name='cpf']").val())){
                swal("Erro", "O CPF informado é inválido.", "error");

                return false;
            }

            if(!validCPF($("input[name='cpf_bank']").val())){
                swal("Erro", "O CPF do favorecido informado é inválido.", "error");

                return false;
            }

            if(!validCNPJ($("input[name='cnpj']").val())){
                swal("Erro", "O CNPJ informado é inválido.", "error");

                return false;
            }
            
            if(!validCNPJ($("input[name='cnpj_bank']").val())){
                swal("Erro", "O CNPJ do favorecido informado é inválido.", "error");

                return false;
            }*/

            $.ajax({
                method: "POST",
                url: "/admin/franchisee/edit/",
                data: $(this).serialize(),
                success: function(){
                    swal({
                        title: "Sucesso",
                        text: "Franqueado editado com sucesso",
                        type: "success"
                    });
                },
                error: function(data){
                    swal("Erro", data.responseText, "error");
                }
            });
        });
    </script>
{% endblock %}